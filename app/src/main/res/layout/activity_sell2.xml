<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.BuyNowActivity2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="20dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_baseline_arrow_back_24"

                    android:layout_width="50dp"

                    android:id="@+id/backToViewActivity"
                    android:layout_height="50dp">

                </ImageView>
                <TextView
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:id="@+id/tvBuyName"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:text="Sell BitCoin"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>
            <TextView
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:textStyle="italic"
                android:textSize="15dp"
                android:id="@+id/tvAvailableSell"
                android:text="$500.11 Available"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_marginTop="70dp"
                android:layout_width="match_parent"
                android:text="Enter your amount"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content">

            </TextView>
            <EditText
                android:padding="20dp"
                android:inputType="number"
                android:layout_width="match_parent"
                android:hint="Amount"
                android:id="@+id/etSellNow"
                android:layout_height="wrap_content">

            </EditText>
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:textSize="15dp"
                android:id="@+id/etAmountBuy"
                android:layout_height="wrap_content">

            </TextView>
            <!--                android:text="Min $100,Max$2.50.000"-->

        </LinearLayout>
        <Button
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:background="@color/BlueViolet"
            android:text="SELL"
            android:id="@+id/btnSellNow"
            android:textColor="@color/White"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">

        </Button>
    </RelativeLayout>

</LinearLayout>